<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpFragments.UserSignUpDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/criteria_cf_bold"
                android:text="Faktoe"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">



                <View
                    android:id="@+id/toggle_bar2"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/shop_onboard_toggle" />
                <View
                    android:id="@+id/toggle_bar3"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/shop_onboard_toggle" />
                <View
                    android:id="@+id/toggle_bar1"
                    android:layout_width="7dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/shop_onboard_signup_background" />


            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/mainHead2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16sp"
                        android:fontFamily="@font/criteria_cf_extrabold_regular"
                        android:text="Enter Personal Details"
                        android:textColor="@color/black"
                        android:textSize="42sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="@font/manjorant_regular"
                        android:text="Fill below details to complete signup process."
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginHorizontal="25dp"
                        android:background="@drawable/edit_text_border"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/ic_badge_black_24dp"
                        app:startIconTint="@color/blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Name"
                            android:maxLength="80"
                            android:textColor="@color/dark_gray"
                            android:textColorHint="@color/gray"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="19sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/edit_text_border"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/ic_dns_black_24dp"
                        app:startIconTint="@color/blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/userAddr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Address"
                            android:maxLength="150"
                            android:textColor="@color/dark_gray"
                            android:textColorHint="@color/gray"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="19sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/edit_text_border"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/ic_alternate_email_black_24dp"
                        app:startIconTint="@color/blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/userEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Email"
                            android:maxLength="50"
                            android:textColor="@color/dark_gray"
                            android:textColorHint="@color/gray"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="19sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/edit_text_border"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/ic_local_post_office_black_24dp"
                        app:startIconTint="@color/blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/userPincode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Pincode"
                            android:maxLength="6"
                            android:inputType="number"
                            android:textColor="@color/dark_gray"
                            android:textColorHint="@color/gray"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="19sp" />
                    </com.google.android.material.textfield.TextInputLayout>

