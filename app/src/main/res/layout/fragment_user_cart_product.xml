<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_white_background"
    android:elevation="2dp"
    android:layout_marginTop="16dp"
    android:paddingBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/productImageCardCart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardCornerRadius="30dp">
        <ImageView
            android:id="@+id/productImageCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/product_sample_image"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/productTitleCart"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Nike ZoomX"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/manjorant_regular"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/productImageCardCart"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/productReviewStarCart"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/productTitleCart"
        app:layout_constraintBottom_toBottomOf="@id/productTitleCart"
        app:layout_constraintStart_toEndOf="@id/productTitleCart"
        app:layout_constraintEnd_toEndOf="parent"

        android:src="@drawable/icon_star"/>

    <TextView
        android:id="@+id/productRatingCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textColor="@color/black"
        android:textSize="7sp"
        android:layout_marginStart="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:fontFamily="@font/manjorant_regular"
        android:background="@drawable/rounded_yellow_background_translucent"
        app:layout_constraintTop_toTopOf="@id/productTitleCart"
        app:layout_constraintBottom_toBottomOf="@id/productTitleCart"
        app:layout_constraintStart_toEndOf="@+id/productReviewStarCart"/>

    <TextView
        android:id="@+id/productPriceCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 14,995"
        android:fontFamily="@font/manjorant_regular"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/productTitleCart"
        app:layout_constraintStart_toEndOf="@id/productImageCardCart"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/productPriceSellingCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/manjorant_regular"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/productTitleCart"
        app:layout_constraintStart_toEndOf="@id/productPriceCart"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:id="@+id/productCategoryBrandCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/productPriceCart"
        app:layout_constraintStart_toEndOf="@id/productImageCardCart"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/productCategoryCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Footwear"
            android:textColor="@color/white"
            android:fontFamily="@font/manjorant_regular"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="12sp"
            android:background="@drawable/rounded_gray_backround"
            />

        <TextView
            android:id="@+id/productBrandCart"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nike"
            android:textColor="@color/white"
            android:fontFamily="@font/manjorant_regular"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="12sp"
            android:background="@drawable/shop_onboard_signup_background"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/productDescriptionCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our lightest racing shoe, the Nike ZoomX Streakfly is all about the speed you need to take on the competition in a mile, 5K or 10K race. Low profile with sleek details, it feels like it disappears on your foot to help you better connect with the road on the way to your personal best."
        android:fontFamily="@font/manjorant_regular"
        android:textSize="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/productCategoryBrandCart"
        app:layout_constraintStart_toEndOf="@id/productImageCardCart"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="24dp"/>

    <TextView
        android:id="@+id/productDescriptionEditorCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read more"
        android:textColor="@color/white"
        android:fontFamily="@font/manjorant_regular"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/productDescriptionCart"
        app:layout_constraintStart_toEndOf="@id/productImageCardCart"
        android:background="@drawable/rounded_gray_backround"
        />

    <LinearLayout
        android:id="@+id/addProductLinearLayoutCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/productImageCardCart"
        app:layout_constraintStart_toStartOf="@id/productImageCardCart"
        app:layout_constraintEnd_toEndOf="@id/productImageCardCart">

        <ImageView
            android:id="@+id/subtractProductImageCart"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icon_minus"
            />
        <TextView
            android:id="@+id/numberOfProductTextViewCart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="1"
            android:gravity="center"
            android:fontFamily="@font/manjorant_regular"
            android:background="@drawable/rounded_blue_backround_outline"/>
        <ImageView
            android:id="@+id/addProductImageCart"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/icon_plus"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>